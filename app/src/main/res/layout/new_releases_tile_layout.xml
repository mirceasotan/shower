<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <com.sotan.mircea.shower.widget.GradientSquareImageView
        android:id="@+id/tile_imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/tile_title_textView_ct"
        tools:targetApi="lollipop" />

    <com.sotan.mircea.shower.widget.ThinTextView
        android:id="@+id/tile_titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tile_imageView"
        android:ellipsize="end"
        android:lines="1"
        android:padding="@dimen/space16"
        android:textSize="@dimen/reg2" />

    <ProgressBar
        android:id="@+id/tile_imageSpinner"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

</RelativeLayout>